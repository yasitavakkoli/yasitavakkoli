<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ShopList.ShopListFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/TotalTextView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_items"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/TotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/TotalCostTextView"
            app:layout_constraintTop_toBottomOf="@+id/listRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
             />

        <TextView
            android:id="@+id/TotalCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TotalCost"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TotalTextView"
            app:layout_constraintTop_toBottomOf="@+id/listRecyclerView"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>